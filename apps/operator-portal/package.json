{
    "name": "operator-portal",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"next dev -p 3001\" \"npm run watch:tailwind\"",
        "build": "postcss styles/tailwind.css -o styles/build.css && next build",
        "build:tailwind": "concurrently \"next dev\" \"npm run watch:tailwind\"",
        "watch:tailwind": "TAILWIND_MODE=watch postcss styles/tailwind.css -o styles/build.css --watch",
        "start": "next start",
        "lint": "eslint --fix --ext .ts,.tsx .",
        "format": "prettier --ignore-path .gitignore --write .",
        "type-check": "tsc"
    },
    "dependencies": {
        "next": "12.1.6",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "sass": "^1.53.0",
        "ui": "*"
    },
    "devDependencies": {
        "@types/crypto-js": "^4.1.1",
        "@types/node": "^18.0.0",
        "@types/react": "18.0.14",
        "@types/react-dom": "17.0.14",
        "autoprefixer": "^10.4.4",
        "concurrently": "^7.1.0",
        "eslint": "8.12.0",
        "eslint-config": "*",
        "next-transpile-modules": "9.0.0",
        "postcss": "^8.4.12",
        "postcss-cli": "^9.1.0",
        "tailwind-config": "*",
        "tailwindcss": "^3.0.23",
        "ts-config": "*",
        "types": "*",
        "typescript": "^4.7.4"
    }
}
